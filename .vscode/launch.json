{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Main",
            "url": "http://localhost:8100",
            "webRoot": "${workspaceFolder}/workspace/projects/main",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///ng://core/*": "${workspaceFolder}/workspace/projects/core/src/*",
                "webpack:///ng://datasource/*": "${workspaceFolder}/workspace/projects/datasource/src/*",
                "webpack:///./src/*": "${workspaceFolder}/workspace/projects/main/src/*"
            }
        }
    ]
}